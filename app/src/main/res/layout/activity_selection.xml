<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:padding="@dimen/padding_medium">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivPlacement"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/image"
            android:elevation="@dimen/padding_micro"
            android:padding="@dimen/padding_small"
            android:src="@drawable/img_placements"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivProject"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/image"
            android:elevation="@dimen/padding_micro"
            android:padding="@dimen/padding_small"
            android:src="@drawable/img_projects"
            app:layout_constraintStart_toEndOf="@id/ivPlacement"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</HorizontalScrollView>