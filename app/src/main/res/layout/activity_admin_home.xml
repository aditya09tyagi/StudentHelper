<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clHome"
    android:padding="@dimen/padding_18_dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddBranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_18_dp"
        android:background="@drawable/bg_rounded_corner"
        android:padding="@dimen/padding_16_dp"
        android:text="@string/add_branch"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_18_dp"
        android:background="@drawable/bg_rounded_corner"
        android:padding="@dimen/padding_16_dp"
        android:text="@string/add_company"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAddBranch" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_18_dp"
        android:background="@drawable/bg_rounded_corner"
        android:padding="@dimen/padding_16_dp"
        android:text="@string/add_job"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAddCompany" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_18_dp"
        android:background="@drawable/bg_rounded_corner"
        android:padding="@dimen/padding_16_dp"
        android:text="@string/add_skill"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAddJob" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_18_dp"
        android:background="@drawable/bg_rounded_corner"
        android:padding="@dimen/padding_16_dp"
        android:text="@string/add_subject"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAddSkill" />


</androidx.constraintlayout.widget.ConstraintLayout>