<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectsetup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".StudentHelper"
        android:fullBackupContent="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.base.BaseActivity"/>

        <activity android:name=".ui.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".ui.user_details.UserDetailsActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".ui.selection.SelectionActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".ui.placement.PlacementActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".ui.project.ProjectActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".ui.chat.ChatActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>